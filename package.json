{
  "name": "snow-cms",
  "version": "1.4.1",
  "description": "A configurable CMS built with Svelte.",
  "keywords": [],
  "author": "Sammy-T",
  "license": "GPL-3.0-only",
  "repository": {
    "type": "git",
    "url": "https://github.com/Sammy-T/snow-cms.git"
  },
  "main": "index.js",
  "type": "module",
  "files": [
    "dist/**.js",
    "dist/**.css"
  ],
  "scripts": {
    "dev": "run-p build:watch:cms serve:site",
    "serve:site": "vite dev-site",
    "build": "vite build -c cms/vite.config.js",
    "build:watch:cms": "vite build --minify false --emptyOutDir -w -c cms/vite.config.js --outDir ../dev-site/cms",
    "prebuild:watch:cms": "node scripts/copy-config.js",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@picocss/pico": "^2.1.1"
  },
  "devDependencies": {
    "@milkdown/kit": "^7.18.0",
    "@milkdown/theme-nord": "^7.18.0",
    "@octokit/core": "^7.0.6",
    "@sveltejs/vite-plugin-svelte": "^6.2.4",
    "browser-fs-access": "^0.38.0",
    "dayjs": "^1.11.19",
    "dotenv": "^17.2.3",
    "events": "^3.3.0",
    "js-yaml": "^4.1.1",
    "npm-run-all": "^4.1.5",
    "pouchdb-adapter-idb": "^9.0.0",
    "pouchdb-core": "^9.0.0",
    "pouchdb-find": "^9.0.0",
    "svelte": "^5.49.1",
    "vite": "^7.3.1"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  }
}
